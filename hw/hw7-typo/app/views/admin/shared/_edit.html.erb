<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @user_is_admin %>
    
    <%= form_tag("/admin/content/merge/#{@article.id}", :id => 'merge_form') do %>
      <h4>Merge Articles</h4>
      <%= label_tag(:merge_with, "Article ID", :style => "text-align: left; width: auto") %>
      <%= text_field_tag(:merge_with) %>
      <br>
      <%= submit_tag("Merge") %>
    <% end %>
    
<% end %>
